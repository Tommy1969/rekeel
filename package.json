{
  "name": "rekeel",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "moment": "^2.24.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-pure-lifecycle": "^3.0.0",
    "react-redux": "^7.1.0",
    "react-scripts": "3.1.1",
    "react-transition-group": "^4.2.2",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "styled-components": "^4.3.2"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix ",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "coverage": "npm test -- --coverage --watchAll=false",
    "plato": "npx plato -r -n -e .eslintrc -t 'Static Analysis Report' -x '\\.(test|spec)\\.' -d report/plato src"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.1.11",
    "@storybook/addon-info": "^5.1.11",
    "@storybook/addon-knobs": "^5.1.11",
    "@storybook/addon-links": "^5.1.11",
    "@storybook/addon-viewport": "^5.1.11",
    "@storybook/addons": "^5.1.11",
    "@storybook/cli": "^5.1.11",
    "@storybook/react": "^5.1.11",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "babel-plugin-root-import": "^6.4.1",
    "babel-plugin-styled-components": "^1.10.6",
    "customize-cra": "^0.5.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.2.2",
    "eslint-plugin-react-redux": "^3.0.1",
    "eslint-plugin-testcafe": "^0.2.1",
    "jest-enzyme": "^7.1.0",
    "jest-fetch-mock": "^2.1.2",
    "jest-html-reporter": "^2.5.0",
    "json-server": "^0.15.0",
    "plato": "^1.7.0",
    "react-app-rewired": "^2.1.3",
    "testcafe": "^1.4.1",
    "testcafe-react-selectors": "^3.2.0"
  },
  "jest": {
    "verbose": true,
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ],
    "coverageDirectory": "report/coverage",
    "coveragePathIgnorePatterns": [
      ".(stories|spec).*"
    ],
    "reporters": [
      "default",
      [
        "./node_modules/jest-html-reporter",
        {
          "pageTitle": "Unit Test Report",
          "outputPath": "report/jest.html"
        }
      ]
    ]
  }
}
