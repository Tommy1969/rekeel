{
    "env": {
      "browser":  true,
      "jest":     true,
      "es6":      true
    },
    "parser": "babel-eslint",
    "plugins": [
      "react",
      "testcafe"
    ],
    "extends": [
      "plugin:react/recommended",
      "plugin:testcafe/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "rules": {
      "indent":               ["error", 2],
      "quotes":               ["error", "single"],
      "semi":                 ["error", "never"],
      "object-curly-spacing": ["error"],
      "eol-last":             ["error"]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
}
